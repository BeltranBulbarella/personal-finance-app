{
  "version": 2,
  "builds": [
    {
      "src": "backend/Dockerfile",
      "use": "@vercel/next",
      "config": { "dockerfile": "backend/Dockerfile" }
    },
    {
      "src": "frontend/Dockerfile",
      "use": "@vercel/node",
      "config": { "dockerfile": "frontend/Dockerfile" }
    }
  ],
  "routes": [
    { "src": "/api/(.*)", "dest": "/backend/$1" },
    { "src": "/(.*)", "dest": "/frontend/$1" }
  ]
}
